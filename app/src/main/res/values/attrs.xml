<resources>

    <declare-styleable name="ProgressBar">
        <attr name="progressColor" format="color" />
    </declare-styleable>

    <declare-styleable name="cardStyle">
        <attr name="cardStyle" format="reference" />
    </declare-styleable>


    <declare-styleable name="FastScrollRecyclerView">
        <attr name="hideScrollbar" format="boolean" />
        <attr name="handleColor" format="color" />
        <attr name="bubbleColor" format="color" />
        <attr name="bubbleTextColor" format="color" />
    </declare-styleable>

    <attr name="seekBarControl" format="reference" />
    <attr name="seekBarProgress" format="reference" />
    <attr name="fastScrollerHandle" format="reference" />
    <attr name="controlsBackground" format="reference" />
    <attr name="trackInfoBackground" format="reference" />
    <attr name="controlsTint" format="reference" />

    <attr name="ToolBar" format="reference" />

    <attr name="ImageControlColor" format="color" />

    <declare-styleable name="SeekArc">
        <attr name="thumb" format="reference" />
        <attr name="thumbOffset" format="dimension" />
        <attr name="max" format="integer" />
        <attr name="progressWidth" format="dimension" />
        <attr name="arcWidth" format="dimension" />
        <attr name="progress" format="integer" />
        <attr name="rotation" format="integer" />
        <attr name="startAngle" format="integer" />
        <attr name="sweepAngle" format="integer" />
        <attr name="arcColor" format="color" />
        <attr name="progressColor0" format="color" />
        <attr name="roundEdges" format="boolean" />
        <attr name="touchInside" format="boolean" />
        <attr name="clockwise" format="boolean" />
        <attr name="enabled" format="boolean" />
    </declare-styleable>

    <declare-styleable name="SeekArcTheme">
        <attr name="seekArcStyle" format="reference"/>
    </declare-styleable>

    <declare-styleable name="VerticalSeekBar">
        <attr name="seekBarRotation">
            <enum name="CW90" value="90" />
            <enum name="CW270" value="270" />
        </attr>
    </declare-styleable>

    <declare-styleable name="ChartAttrs">

        <attr name="chart_axis" format="boolean" />
        <attr name="chart_axisThickness" format="dimension" />
        <attr name="chart_axisColor" format="reference|color" />
        <attr name="chart_axisBorderSpacing" format="dimension" />
        <attr name="chart_axisTopSpacing" format="dimension" />

        <attr name="chart_axisLabelsSpacing" format="dimension" />

        <attr name="chart_labels" format="enum">
            <enum name="outside" value="0" />
            <enum name="inside" value="1" />
            <enum name="none" value="2" />
        </attr>

        <attr name="chart_labelColor" format="reference|color" />
        <attr name="chart_fontSize" format="dimension" />
        <attr name="chart_typeface" format="string" />

    </declare-styleable>

</resources>
