<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_background"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp">

    <ImageView
        android:id="@+id/cover"
        android:layout_width="55dp"
        android:layout_height="match_parent"
        android:paddingLeft="9dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginEnd="5dp"
        android:layout_toEndOf="@id/cover"
        android:layout_toStartOf="@id/control"
        android:orientation="vertical"
        android:layout_marginStart="9dp">

        <TextView
            android:id="@+id/titre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/grey_800"
            android:text="Titre morceau"
            android:ellipsize="end"
            android:maxLines="1"/>

        <TextView
            android:id="@+id/album"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/grey_600"
            android:text="Album"
            android:layout_marginTop="2dp"
            android:ellipsize="end"
            android:maxLines="1"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/control"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:gravity="right"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/prev"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_fast_rewind_amber_a700_36dp"
            android:layout_marginEnd="10dp"/>

        <ImageView
            android:id="@+id/play"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_play_circle_filled_amber_a700_36dp"
            android:layout_marginEnd="10dp" />

        <ImageView
            android:id="@+id/next"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_fast_forward_amber_a700_36dp"
            android:layout_marginEnd="10dp" />

    </LinearLayout>
</RelativeLayout>

